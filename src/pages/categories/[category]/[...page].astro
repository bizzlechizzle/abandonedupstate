---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Main from "@/layouts/Main.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getUniqueCategories from "@/utils/getUniqueCategories";
import getPostsByCategory from "@/utils/getPostsByCategory";
import { SITE } from "@/config";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");
  const categories = getUniqueCategories(posts);

  return categories.flatMap(({ slug, label }) => {
    const categoryPosts = getPostsByCategory(posts, slug);

    return paginate(categoryPosts, {
      params: { category: slug },
      props: { categoryLabel: label },
      pageSize: SITE.postPerPage,
    });
  });
}

const { category } = Astro.params;
const { page, categoryLabel } = Astro.props;
---

<Layout title={`Category: ${categoryLabel} | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle={[`Category:`, `${categoryLabel}`]}
    titleTransition={category}
    pageDesc={`All the locations in the "${categoryLabel}" category.`}
  >
    <h1 slot="title" transition:name={category}>{`Category:${categoryLabel}`}</h1>
    <ul class="space-y-8">
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
