---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Main from "@/layouts/Main.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getUniqueStates from "@/utils/getUniqueStates";
import getPostsByState from "@/utils/getPostsByState";
import { SITE } from "@/config";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");
  const states = getUniqueStates(posts);

  return states.flatMap(({ slug, label }) => {
    const statePosts = getPostsByState(posts, slug);

    return paginate(statePosts, {
      params: { state: slug },
      props: { stateLabel: label },
      pageSize: SITE.postPerPage,
    });
  });
}

const { state } = Astro.params;
const { page, stateLabel } = Astro.props;
---

<Layout title={`State: ${stateLabel} | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle={[`State:`, `${stateLabel}`]}
    titleTransition={state}
    pageDesc={`All the locations in "${stateLabel}".`}
  >
    <h1 slot="title" transition:name={state}>{`State:${stateLabel}`}</h1>
    <ul class="space-y-8">
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
